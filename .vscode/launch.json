    },
    {
      "name": "Debug: unit_tests",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetDirectory}/unit_tests.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "PATH",
          "value": "${env:PATH};${workspaceFolder}/build/vcpkg_installed/x64-windows/bin"
        }
      ],
      "console": "integratedTerminal",
      "preLaunchTask": "CMake: build"
    }
  ]
