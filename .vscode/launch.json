{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug: zenith-finder",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "PATH",
          "value": "${env:PATH};${workspaceFolder}/build/vcpkg_installed/x64-windows/bin"
